
@{
    Layout = null;
}
@model TCYDMWebApp.DTO.AdminTable
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="~/AdminPanel/css/main.css" rel="stylesheet" />
    <link href="~/mainlayout/logo/logomain.png" rel="icon" type="image/gif">
    <title>Giriş</title>
</head>

<body class="login_body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-7 col-sm-7 col-md-7 col-lg-6 col-xl-6">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="login_logo">
                                <img src="~/mainlayout/logo/logo.png" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="login_form">
                                <p>Admin Sisteminə Giriş</p>
                            </div>
                        </div>
                    </div>
                    <form asp-controller="Login" asp-action="Index" method="post">
                        <div class="row login_form_inputs">
                            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2 login_text_container">
                                <label for="apply" class="content_input_labels login_text">Username</label>
                            </div>
                            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xl-6">
                                <div class="login_button__container">
                                    <input asp-for="Username" class="content_input_texts form-control" />
                                    <i class="fas fa-sign-in-alt"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row login_form_inputs second">
                            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2 login_text_container">
                                <label for="apply" class="content_input_labels login_text">Password</label>
                            </div>
                            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xl-6">
                                <div class="login_button__container">
                                    <input type="password" asp-for="Password" class="content_input_texts form-control" />
                                    <i class="fas fa-sign-in-alt"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row login_form_inputs second">
                            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2 check_box_paddings">
                            </div>
                            <div class="d-none d-lg-block d-xl-block col-lg-2 col-xl-2"></div>
                            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-6 col-xl-4">
                                <div class="login_button__container">
                                    <button type="submit" class="btn btn-primary login_button">
                                        <span class="button_span">Sistemə giriş</span>
                                        <i class="fas fa-sign-in-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <div class="col-xs-5 col-sm-5 col-md-5 col-lg-6 col-xl-6">
                <div class="login_image">
                    <img src="~/AdminPanel/images/Group 559@2x.svg" />
                </div>
            </div>
        </div>
    </div>
</body>

</html>
