<form asp-action="SetLanguage" asp-controller="Home" id="lngform">
    <select style="text-transform:uppercase;font-weight:bold;" name="culture" class="lng">
        @if (@Context.Request.Cookies["LangKey"] == null)
        {
            <option selected value="1">en</option>
            <option value="2">ru</option>
            <option value="3">tr</option>
        }
        else
        {
            if (@Context.Request.Cookies["LangKey"] == "3")
            {
                <option selected value="3">tr</option>
            }
            else
            {
                <option value="3">tr</option>
            }
            if (@Context.Request.Cookies["LangKey"] == "2")
            {
                <option selected value="2">ru</option>
            }
            else
            {
                <option value="2">ru</option>
            }
            if (@Context.Request.Cookies["LangKey"] == "1")
            {
                <option selected value="1">en</option>
            }
            else
            {
                <option value="1">en</option>
            }
        }

    </select>
    <input type="hidden" name="returnurl" value="@Context.Request.Path" />
</form>